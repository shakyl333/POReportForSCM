<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="POReportForSCM.POReportForSCM.controller.V_POItem">
	<App>
		<pages>
			<Page title="PO Item Detail" showNavButton="true" navButtonPress="GoToHeader">
				<content>
					<Table noDataText="Drop column list items here and columns in the area above" items="{/sap/opu/odata/sap/ZSM_PO_SRV/POItemSet}" id="it_item">
						<columns>
							<Column id="column0">
								<header>
									<Label text="PO Document No." id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="PO Doc Item" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="Quantity" id="label2"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="Material" id="label3"/>
								</header>
							</Column>
							<Column id="column4">
								<header>
									<Label text="Plant" id="label4"/>
								</header>
							</Column>
							<Column id="column5">
								<header>
									<Label text="Status" id="label5"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active" id="item0">
								<cells>
									<Text text="{Ebeln}" id="text0"/>
									<Text text="{Ebelp}" id="text1"/>
									<Text text="{Menge}" id="text2"/>
									<Text text="{Matnr}" id="text3"/>
									<Text text="{Werks}" id="text4"/>
									<Text text="{Statu}" id="text5"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>